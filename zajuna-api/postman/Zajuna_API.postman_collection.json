						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 400\", function () {",
									"    pm.response.to.have.status(400);",
									"});",
									"",
									"pm.test(\"Duplicate error detected\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.code).to.equal('VALIDATION_ERROR');",
									"});",
									"",
									"pm.test(\"Error message mentions duplicates\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.message.toLowerCase()).to.include('duplicado');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
