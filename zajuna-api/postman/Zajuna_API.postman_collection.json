									"",
									"pm.test(\"Multiple users updated\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.updated).to.equal(2);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"users\": [\n    {\n      \"id\": 3,\n      \"firstname\": \"Usuario\",\n      \"lastname\": \"Uno\",\n      \"email\": \"usuario1@example.com\",\n      \"city\": \"Madrid\",\n      \"country\": \"ES\",\n      \"lang\": \"es\",\n      \"timezone\": \"Europe/Madrid\",\n      \"phone1\": \"+34123456789\"\n    },\n    {\n      \"id\": 4,\n      \"firstname\": \"Usuario\",\n      \"lastname\": \"Dos\",\n      \"email\": \"usuario2@example.com\",\n      \"city\": \"Barcelona\",\n      \"country\": \"ES\",\n      \"lang\": \"es\",\n      \"timezone\": \"Europe/Madrid\",\n      \"phone1\": \"+34987654321\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/update",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "update"]
						},
						"description": "Actualiza múltiples usuarios en una sola petición. NOTA: Cambia los IDs por unos válidos de tu BD."
					},
					"response": []
				},
				{
					"name": "Delete Users (Suspend)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Users suspended successfully\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('message');",
									"    pm.expect(jsonData).to.have.property('deleted');",
									"    pm.expect(jsonData.deleted).to.be.greaterThan(0);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userids\": [100, 101]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users",
							"host": ["{{base_url}}"],
							"path": ["api", "users"]
						},
						"description": "Suspende usuarios (soft delete) por sus IDs. NOTA: Usa IDs de usuarios de prueba que existan en tu BD."
					},
					"response": []
				},
				{
					"name": "Validation Error - Invalid Email",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 400\", function () {",
									"    pm.response.to.have.status(400);",
									"});",
									"",
									"pm.test(\"Error response structure\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('code');",
									"    pm.expect(jsonData).to.have.property('message');",
									"    pm.expect(jsonData).to.have.property('timestamp');",
									"});",
									"",
									"pm.test(\"Error code is correct\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.code).to.equal('INVALID_JSON');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"users\": [\n    {\n      \"id\": 3,\n      \"firstname\": \"Juan\",\n      \"lastname\": \"Pérez\",\n      \"email\": \"email-invalido\",\n      \"city\": \"Madrid\",\n      \"country\": \"ES\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/update",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "update"]
